<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-add-user-roles" author="smartledger">
        <!-- Create user_roles table -->
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_roles_user" references="users(id)" deleteCascade="true"/>
            </column>
            <column name="role" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add primary key constraint -->
        <addPrimaryKey tableName="user_roles" columnNames="user_id,role" constraintName="pk_user_roles"/>

        <!-- Create index on user_id for better query performance -->
        <createIndex indexName="idx_user_roles_user_id" tableName="user_roles">
            <column name="user_id"/>
        </createIndex>

        <!-- Assign ADMIN role to the default admin user -->
        <insert tableName="user_roles">
            <column name="user_id" valueComputed="(SELECT id FROM users WHERE username = 'admin')"/>
            <column name="role" value="ADMIN"/>
        </insert>

        <!-- Insert sample users with different roles for testing -->
        <!-- Password for all test users: password123 -->
        <insert tableName="users">
            <column name="username" value="user"/>
            <column name="password" value="$2a$10$rXDwF8LqvVqTjLwZ3LCNWe1bRbC0pCQlqH6rJHxPz4gLzwLGvZ.Mm"/>
            <column name="email" value="user@smartledger.com"/>
            <column name="full_name" value="Regular User"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>

        <insert tableName="users">
            <column name="username" value="supervisor"/>
            <column name="password" value="$2a$10$rXDwF8LqvVqTjLwZ3LCNWe1bRbC0pCQlqH6rJHxPz4gLzwLGvZ.Mm"/>
            <column name="email" value="supervisor@smartledger.com"/>
            <column name="full_name" value="Supervisor User"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>

        <!-- Assign roles to test users -->
        <insert tableName="user_roles">
            <column name="user_id" valueComputed="(SELECT id FROM users WHERE username = 'user')"/>
            <column name="role" value="USER"/>
        </insert>

        <insert tableName="user_roles">
            <column name="user_id" valueComputed="(SELECT id FROM users WHERE username = 'supervisor')"/>
            <column name="role" value="SUPERVISOR"/>
        </insert>
    </changeSet>

</databaseChangeLog>
